{
	"geode": "4.2.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "dasshu.better-gauntlets",
	"name": "Better Gauntlets",
	"version": "v1.1.31",
	"developer": "DasshuDEV",
	"description": "Brings the Gauntlets to life!",
	"links": {
		"source": "https://github.com/DasshuDev/BetterGauntlets",
		"community": "https://discord.gg/F94qat6N3D",
		"homepage": "https://dasshu.dev"
	},
	"issues": {
		"info": "https://github.com/DasshuDev/BetterGauntlets/issues"
	},
	"tags": [
		"interface",
		"enhancement"
	],
	"resources": {
		"files": [
			"resources/fonts/*.fnt",
			"resources/fonts/*.png"
		],
		"sprites": [
			"resources/GauntletSelectLayer/**/*.png"
		],
		"spritesheets": {
			"GauntletLayerSheet_01": [
				"resources/GauntletLayer/**/*.png"
			]
		}
	},
	"dependencies": [
        {
            "id": "geode.node-ids",
            "version": ">=v1.19.0",
            "importance": "required"
        },
		{
			"id": "geode.custom-keybinds",
            "version": ">=v1.0.0",
            "importance": "required",
			"platforms": ["win"]
		}
	],
	"settings": {
		"update-discord-sprite": {
			"name": "Update Discord Sprite",
			"description": "Updates the <cj>Discord</c> logo on the <cj>Discord</c> Gauntlet to match with the <cg>current</c> company logo.\n\n<cr>This does not work on GauntletSelectLayer.</c>",
			"type": "bool",
			"default": false
		},
		"loading-circle-scale": {
			"name": "Re-scale Loading Circle",
			"description": "<cg>Rescale</c> the <cy>Loading Circle</c>, visible when Gauntlets and Gauntlet levels are <cj>loading</c>.",
			"type": "float",
			"default": 1.0,
			"min": 0.75,
			"max": 1.25,
			"control": {
				"arrows": true,
				"slider": true,
				"slider-step": 0.05,
				"input": true
			}
		}
	}
}
